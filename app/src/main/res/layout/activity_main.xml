<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">
    <HorizontalScrollView
        android:id="@+id/scroll_banner_badge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A6000000"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/banner_badge"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:animateLayoutChanges="true">
            <ImageButton
                android:layout_marginRight="5dp"
                android:id="@+id/img_btn_badge_search"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/badge_search" />
            <Button
                android:id="@+id/btn_badge_all"
                android:padding="0dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="@android:color/white"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="呱呱"
                android:layout_gravity="top"
                android:background="@drawable/badge"/>
            <Button
                android:id="@+id/btn_badge_taiwan"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_gravity="top"
                android:background="@drawable/badge_taiwan"/>
        </LinearLayout>
    </HorizontalScrollView>
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground" />
</LinearLayout>
